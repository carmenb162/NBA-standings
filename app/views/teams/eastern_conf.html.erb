<h1>NBA Eastern Conference Standings</h1>
<table class="table table-striped">
  <tr>
    <th>Team</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>Win %</th>
  </tr>
  <% @teams.each do |team| %>
  <tr>
    <td><%= team.city %> - <%= team.nickname %></td>
    <td><%= team.wins %></td>
    <td><%= team.losses %></td>
    <td><%= number_to_percentage(team.win_percent, precision: 2) %></td>
  </tr>
  <% end %>

</table>
